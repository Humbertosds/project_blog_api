generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

enum Role {
    USER
    ADMIN
}

enum StatusPost {
    PUBLISHED
    DRAFT
}

model User {
    id        String   @id @default(uuid())
    status    Boolean  @default(true)
    name      String
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    role      Role     @default(USER)
    posts     Post[]

    @@map("users")
}

model Post {
    id        String     @id @default(uuid())
    slug      String     @unique
    status    StatusPost @default(DRAFT)
    title     String
    body      String
    createdAt DateTime   @default(now())
    updatedAt DateTime?  @updatedAt
    cover     String?
    tags      String[]   @default([])

    authorId String
    author   User   @relation(fields: [authorId], references: [id])

    @@map("posts")
}
